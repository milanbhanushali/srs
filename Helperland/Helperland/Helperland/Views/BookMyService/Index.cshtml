@{
    ViewData["Title"] = "Book My Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5"></div>
<div class="container">
    <div class="row text-center mt-5">
        <h3>Setup Your Cleaning Service</h3>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <span>
                <span class="custom-separator-line"></span>
                <span> <img src="~/img/separator.png" alt=""></span>
                <span class="custom-separator-line"></span>
            </span>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row">
        <div class="col-8">
            <div class="list-group list-group-horizontal" id="list-tab" role="tablist">
                <a class="list-group-item list-group-item-action active" id="list-home-list" data-bs-toggle="list" href="#list-home" role="tab" aria-controls="list-home">Home</a>
                <a class="list-group-item list-group-item-action" id="list-profile-list" data-bs-toggle="list" href="#list-profile" role="tab" aria-controls="list-profile">Profile</a>
                <a class="list-group-item list-group-item-action" id="list-messages-list" data-bs-toggle="list" href="#list-messages" role="tab" aria-controls="list-messages">Messages</a>
                <a class="list-group-item list-group-item-action" id="list-settings-list" data-bs-toggle="list" href="#list-settings" role="tab" aria-controls="list-settings">Settings</a>
            </div>
        </div>
        <div class="col-4">
            <div class="card shadow">
                <div class="card-header">
                    <h4> Payment Summary</h4>
                </div>
                <div class="card-body">
                    <p class="card-text"> Duration </p>
                    <div class="row card-text">
                        <div class="col-2">Basic</div>
                        <div class="col-10 text-end">0 Hr</div>
                    </div>
                    <hr>
                    <div class="row card-text">
                        <div class="col-8"><h6 class="card-title">Total Service Time</h6></div>
                        <div class="col-4 text-end">0 Hr</div>
                    </div>
                    <hr>
                    <p class="card-text">Per cleaning</p>
                    <hr>
                    <div class="row card-text">
                        <div class="col-8"><h5 class="card-title text-info">Total Payment</h5></div>
                        <div class="col-4 text-end"><h3 class="card-title text-info">0,00 €</h3></div>
                    </div>
                    <div class="row card-text">
                        <div class="col-12">According to § 19 UStG no sales tax is calculated.</div>
                    </div>
                    <div class="row card-text">
                        <div class="col-4">Effective Price</div>
                        <div class="col-8 text-end fw-bold"><h5> 0,00 €</h5></div>
                    </div>
                    <div class="row card-text">
                        <div class="col-12"><span class="text-danger">*</span>You will save 20% according to §35a EStG.</div>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    ☺ See what is always included
                </div>
            </div>
        </div>
    </div>

</div>
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="tab-content" id="nav-tabContent">

                <div class="tab-pane fade show active mb-5" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                    <form class="row g-3" id="formCheckPostalCode">
                        <div class="col-5">
                            <label for="lblPostalCode" class="form-label">Enter Your Postal Code</label>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input type="text" class="form-control" name="PostalCode" id="txtPostalCode" value="">
                                <span id="error" class="text-danger"></span>
                            </div>

                            <div class="col-6">
                                <button class="btn btn-primary" type="button" id="btnCheckPostalCode">Check Availability</button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">
                    <div class="row">
                        <div class="col-5">
                            <strong>When do you need the cleaner?</strong>
                        </div>
                        <div class="col-7">
                            <strong>How long do you need your cleaner to stay?</strong>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-3">
                            <input type="date" id="example" class="form-control">
                        </div>
                        <div class="col-2">
                            <div class="dropdown bg-transparent ">
                                <button class="btn btn-secondary bg-transparent dropdown-toggle text-dark" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    8:00
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li class="dropdown-item">8:30</li>
                                    <li class="dropdown-item">9:00</li>
                                    <li class="dropdown-item">9:30</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="dropdown bg-transparent ">
                                <button class="btn btn-secondary bg-transparent dropdown-toggle text-dark" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    8:00
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li class="dropdown-item">8:30</li>
                                    <li class="dropdown-item">9:00</li>
                                    <li class="dropdown-item">9:30</li>
                                </ul>
                            </div>
                        </div>

                    </div>

                    <hr>
                    <div class="text-start"><strong>Extra Services</strong></div>
                    <div class="container mt-3">
                        <div class="row gy-4">
                            <div class="mt-3">
                                <div class="custom-imgrounded-borders">
                                    <img src="~/img/fridge.webp" class="custom-extra-services-img ms-2"
                                         alt="gallery">
                                </div>
                                <div class="row custom-text-dim-gray justify-content-center">
                                    Inside Cabinet
                                </div>
                            </div>







                        </div>
                    </div>

                </div>

                <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">Open 3</div>
                <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">Open 4</div>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>