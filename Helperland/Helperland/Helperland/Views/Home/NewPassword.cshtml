@model Helperland.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card {
        margin-top: 10px;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 20px;
        float: none;
    }
</style>

<div class="row mt-3"></div>
<div class="container mt-5">
    <div class="row text-center mt-5">
        <h3>Forgot Password</h3>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <h1> <img src="~/img/separator-star.png" alt=""></h1>
        </div>
    </div>
</div>

<div class="card" style="width: 18rem;">
    <img src="~/img/undraw_Forgot_password_re_hxwm (1).png" class="img-fluid" alt="...">
    <div class="card-body">
        <form class="row g-3 needs-validation" asp-controller="Home" asp-action="NewPassword" novalidate>
            <span id="errForgotEmailPassword" class="text-danger"></span>
            <div class="mb-2">
                <label class="form-label">Email address</label>
                <input asp-for="Email" type="email" class="form-control" id="txtForgottedEmail">
            </div>
            <div class="invalid-feedback">
                You must agree before submitting.
            </div>
            <div class="mb-2">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="text" class="form-control" id="txtForgottedPassword">
            </div>
            <div class="mb-2">
                <label class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="txtForgottedConfirmPassword">
            </div>
            <button type="submit" class="btn btn-primary" id="btnForgotForm">Submit</button>
        </form>
    </div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript">

</script>

