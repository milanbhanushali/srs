@model Helperland.Models.ViewModel.LoginViewModel

<div class="modal fade p-5" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm  modal-dialog-centered">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title custom-text-dim-gray fw-bold"> Login to your account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                
            </div>
            <form method="post" asp-controller="Home" asp-action="Login">
                <div class="container custom-borderless mt-3">
                    <div class="form-group">
                        <div class="">
                            <span id="loginError" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <i class="fas fa-user fs-5"></i>
                            <input asp-for="Email" class="form-control" id="txtEmail" placeholder="Email">

                        </div>
                        <div class="mb-3">
                            <i class="fas fa-lock fs-5"></i>
                            <input type="password" asp-for="Password" class="form-control" id="txtPassword" placeholder="Password">
                        </div>

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="cbRememberMe">
                            <label class="form-check-label" for="exampleCheck1">Remeber me</label>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="modal-btn-login fw-bold" id="btnLogin"> Login</button>
                        </div>
                        <div class="text-center mt-2 mb-3">
                            <a href="" class="a-tag-green-color" data-target="#forgotPassword"
                               data-toggle="modal" data-dismiss="modal">Forgot Password?</a>
                        </div>
                        <div class="text-center mt-3">
                            Don't have account?
                            <span>
                                <a asp-controller="Home" asp-action="UserRegistration" class="a-tag-green-color">Create an account? </a>
                            </span>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="forgotPassword" role="dialog">
    <div class="modal-dialog modal-dialog-centered">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h1 id="fg">Forgot password </h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span id="new" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="Account" asp-action="ForgotPasswordResetlink">
                    <div id="not" class="mb-5">
                        @Html.TextBox("Email", "", new { @class = "form-control form-control-lg" })
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block rounded-pill mb-3" id="thispw">Send</button>
                </form>

                <div>
                    <a href="#myModal" data-toggle="modal" data-dismiss="modal" data-target="#myModal" class="d-flex justify-content-center mb-3">Login now</a>
                </div>
            </div>
        </div>
    </div>
</div>