@model Helperland.Models.ViewModel.LoginViewModel
@using Microsoft.AspNetCore.Http;

@{ int? userID = Context.Session.GetInt32("userID"); }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helperland</title>


    <!-- #region Links -->
    <link rel="icon" href="~/img/favicon_img.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel=stylesheet>
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <!-- #endregion Links -->

</head>
<body>

    <!--#region Navbar-->
    <header class="fixed-top">
        <div class="custom-navbar-logo ">
            <img src="~/img/white-logo-transparent-background.png" alt="" class="mb-4">
        </div>
        <nav class="custom-mobile-navbar fixed-top" id="nav-menu">
            <ul class="nav__list">
                <i class="bi bi-x-lg header__close" id="close-menu"></i>
                <li class="nav__items ">
                    <a class="nav__link border-btn custom-bg-green-btn"
                       asp-controller="Home" asp-action="" id="btnBookNow" asp-route-isLogged="@ViewBag.IsLogged">Book now</a>
                </li>
                <li class="d-none" id="userID" value="@Context.Session.GetInt32("userID")"></li>
                <li class="nav__items border-btn">
                    <a asp-controller="Home" asp-action="Prices" class="nav__link ">Prices & Services</a>
                </li>
                <li class="nav__items">
                    <a asp-controller="Home" asp-action="" class="nav__link">Warranty</a>
                </li>
                <li class="nav__items">
                    <a asp-controller="Home" asp-action="Contact" class="nav__link">Contact</a>
                </li>
                @if (ViewBag.IsLogged == true)
                {
                    <li class="custom-vertical-bar ms-2">|</li>
                    <li class="nav__items">
                        <a href="" class="nav__link p-0">
                            <img src="~/img/icon-notification.webp" alt="" class="custom-notification-size">
                        </a>
                    </li>
                    <li class="custom-vertical-bar me-1">|</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarUserLoggedInDropDown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/img/profile.webp" alt="" class="custom-notification-size">
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarUserLoggedInDropDown">
                            <li><a class="dropdown-item" href="#">Welcome @Context.Session.GetString("FirstName")</a></li>
                            @*<li class="d-none" id="madija">@Context.Session.GetString("userID")</li>*@
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">My Dashboard</a></li>
                            <li><a class="dropdown-item" href="#">My Setting</a></li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav__items border-btn">
                        <a class="btn text-white" data-bs-toggle="modal" data-bs-target="#LoginModel" data-keyboard="false">
                            Login
                        </a>
                    </li>
                    <li class="nav__items border-btn"><a href="" class="nav__link" id="btnBecomeHelper">Become a Helper</a></li>
                }

                <li class="custom-line-mobile-view"></li>
                <li class="nav__items">
                    <a href="" class="nav__link custom-navbar-icon-show-hide">
                        <img src="./assets/img/fb.png"
                             alt="">
                    </a>
                    <a href="" class="nav__link custom-navbar-icon-show-hide"><img src="~/img/insta.png" alt=""></a>
                </li>
            </ul>
        </nav>
        <i class="bi bi-list header__toggle" id="toggle-menu"></i>
    </header>
    <!--#endregion Navbar-->
    <div class="container">
        <div class="row justify-content-center">
            <div class="modal fade p-5" id="LoginModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm  modal-dialog-centered">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title custom-text-dim-gray fw-bold"> Login to your account</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                        </div>
                        <form method="post" asp-controller="Home" asp-action="Login">
                            <div class="container custom-borderless mt-3">
                                <div class="form-group">
                                    <div class="">
                                        <span id="loginError" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <i class="fas fa-user fs-5"></i>
                                        <input asp-for="Email" class="form-control" id="txtEmail" placeholder="Email">

                                    </div>
                                    <div class="mb-3">
                                        <i class="fas fa-lock fs-5"></i>
                                        <input type="password" asp-for="Password" class="form-control" id="txtPassword" placeholder="Password">
                                    </div>

                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="cbRememberMe">
                                        <label class="form-check-label" for="exampleCheck1">Remeber me</label>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="modal-btn-login fw-bold" id="btnLogin"> Login</button>
                                    </div>
                                    <div class="text-center mt-2 mb-3">
                                        <a href="#ForgetPasswordModel" class="a-tag-green-color"
                                           data-bs-toggle="modal" data-bs-dismiss="modal" >Forgot Password?</a>
                                    </div>
                                    <div class="text-center mt-3">
                                        Don't have account?
                                        <span>
                                            <a asp-controller="Home" asp-action="UserRegistration" class="a-tag-green-color">Create an account? </a>
                                        </span>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="ForgetPasswordModel" role="dialog" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">

                    <!-- Modal content-->
                    <div class="row justify-content-center">
                        <form method="post" asp-controller="Home" asp-action="ForgotPasswordResetlink" class="needs-validation" novalidate>
                            <div class="col-12 mb-3" id="not">
                                <input asp-for="Email" class="form-control" id="txtEmailForgot" placeholder="Email">
                                <div class="invalid-feedback">
                                    Please enter email !!
                                </div>
                            </div>
                            <div class="offset-2 col-6 mb-2">
                                <button type="submit" class="modal-btn-login fw-bold" id="btnSubmitPassword">Send</button>
                            </div>
                        </form>
                        <div class="text-center">
                            <a href="#LoginModel" data-bs-toggle="modal" data-bs-dismiss="modal" data-bs-target="#LoginModel" class="a-tag-green-color">Login now</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid p-0">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <!--#region Footer-->
    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a href="#" title="Helper Hand">
                            <img src="~/img/site-logo.png" alt="Helper Hand">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li>
                                <a href="#" title="Home">Home</a>
                            </li>
                            <li>
                                <a href="#" title="About">About</a>
                            </li>
                            <li>
                                <a href="#" title="Testimonials">Testimonials</a>
                            </li>
                            <li>
                                <a href="#" title="FAQs">FAQs</a>
                            </li>
                            <li>
                                <a href="#" title="Insurance Policy">Insurance Policy</a>
                            </li>
                            <li>
                                <a href="#" title="Impressum">Impressum</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#" target="_blank" title="Facebook">
                                    <img src="~/img/fb.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank" title="Instagram">
                                    <img src="~/img/insta.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-12">
                    <hr class="text-light">
                    <div class="custom-footer-text text-center ">
                        ©2018 Helperland. All rights reserved. Terms and Conditions | Privacy Policy
                    </div>
                </div>
            </div>
        </div>

    </footer>
    <!--#endregion Footer-->
    <!--#region Javascript-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
    <!--#endregion Javascript-->

</body>
</html>
